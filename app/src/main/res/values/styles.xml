<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.IssueFragment">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="IssueItem">
        <item name="android:background">@drawable/issue_list_item_background_statelist</item>
    </style>

    <style name="IssueItem.IssueText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="IssueItem.IssueText.IssueTitle">
        <item name="android:textSize">@dimen/issue_title_text_size</item>
    </style>
</resources>
